{% extends 'base.html.twig' %}

{% block title %}
	{{ 'nav.home'|trans }}
{% endblock %}

{% block body %}
	<div>
		<div id="index-img">
			<img src="{{ asset('image/man-g609b0aeff_1920.jpg') }}" class="img-fluid" id="index-fullscreen-img">
			<a href="#figures_card" class="arrow-down">
				<div class="container">
					<div class="content">
						<svg id="more-arrows">
							<polygon class="arrow-top" points="37.6,27.9 1.8,1.3 3.3,0 37.6,25.3 71.9,0 73.7,1.3 "/>
							<polygon class="arrow-middle" points="37.6,45.8 0.8,18.7 4.4,16.4 37.6,41.2 71.2,16.4 74.5,18.7 "/>
							<polygon class="arrow-bottom" points="37.6,64 0,36.1 5.1,32.8 37.6,56.8 70.4,32.8 75.5,36.1 "/>
						</svg>
					</div>
				</div>
			</a>
		</div>
		<ul class="figure-card-list" id="figures_card">
			{% for data in datas %}
				<div class="card" style="width: 18rem;">

					{% for picture in data.figurePictures %}
						{% if picture.main %}
							<img src="{{ asset('image/upload/' ~ picture.fileName) }}" class="card-img-top">
						{% endif %}
					{% else %}
						<img src="{{ asset('image/default/default.jpg') }}" class="card-img-top">
					{% endfor %}

					<div class="card-body">
						<h5 class="card-title">{{ data.name }}</h5>
						<p class="card-text">{{ data.description }}</p>
						<a href=" {{path('figure', {slug: data.slug} )}}" class="btn btn-primary">{{"card.details"|trans}}</a>
					</div>
				</div>
			{% endfor %}
			{% if page < 7 %}
				<a href="{{path('home', {page: page + 1 } )}}">
					<button type="button" class="btn btn-light" style="height:50px">{{"button.more"|trans}}</button>
				</a>
			{% endif %}
		</ul>
	</div>
{% endblock %}
